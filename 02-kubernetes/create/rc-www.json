{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "www-rc"
    },
    "spec": {
        "replicas":2,
        "selector": {
            "app": "www"
        },
        "template":{
             "metadata":{
                  "labels":{
                      "app":"www"
                  }
             },
             "spec":{
                 "containers":[
                  {
                      "name": "git-sync",
                      "image": "openweb/git-sync",
                      "resources": {
                          "requests":{
                              "cpu": "10m"
                          }
                       },
                       "volumeMounts": [
                           {
                               "name": "www-config",
                               "mountPath": "/git"
                           }
                       ],
		       "env": [
                           {"name": "GIT_SYNC_REPO", "value": "https://polyakov@bitbucket.org/polyakov/conf.d.git"},
                           {"name": "GIT_SYNC_DEST", "value": "/git"}
                       ]
                  },
                  {
                      "name":"app-www",
                      "image":"docker.io/nginx",
                      "resources": {
	                  "requests":{
		              "cpu": "10m"
		          }
		       },
                       "ports": [
                           {
                               "containerPort": 80 
                           }
                       ],
                       "volumeMounts": [
                           {
                               "name": "www-config",
                               "mountPath": "/etc/nginx/conf.d"
                           }
                       ]
                  }
                  ],
                  "nodeSelector": {
                      "www": "true"
                  },
                  "volumes": [
                      {
                          "name": "local-config",
                          "hostPath": {"path": "/etc/nginx/conf.d"}
                      },
                      {
                          "name": "www-config",
                          "emptyDir": {}
                      }
                  ]

              }
         }
    }
}
