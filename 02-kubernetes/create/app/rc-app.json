  {
      "kind": "ReplicationController",
      "apiVersion": "v1",
      "metadata": {
          "name": "app-rc"
      },
      "spec": {
          "replicas":3,
          "selector": {
              "app": "app-api"
          },
          "template":{
               "metadata":{
                    "labels":{
                        "app":"app-api"
                    }
               },
               "spec":{
                   "containers":[
                    {
                        "name":"app-api",
                        "image":"950935651420.dkr.ecr.us-east-1.amazonaws.com/preparedminddemo:latest",
                        "resources": { "requests":{ "cpu": "10m" } },
                         "env":[
                             {
                                "name":  "MONGO_CONNECTION_STR",
                                "value": "mongodb://mongo1-svc.<namespace>.svc.cluster.local:27017,mongo2-svc.<namespace>.svc.cluster.local:27017/demo?replicaSet=demoRS"
                             }
                         ],
                         "ports": [ {  "containerPort": 8080 } ]
                    }],
                    "nodeSelector": { "app": "true" }
                }
           }
      }
  }
